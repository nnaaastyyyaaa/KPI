{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "Address": {
      "type": "object",
      "properties": {
        "address_id": { "type": "integer" },
        "country": { "type": "string" },
        "city": { "type": "string" },
        "street": { "type": "string" },
        "postal_code": { "type": "integer" }
      },
      "required": ["address_id", "country", "city", "street", "postal_code"]
    },
    "Client": {
      "type": "object",
      "properties": {
        "client_id": { "type": "integer" },
        "client_name": { "type": "string" },
        "email": { "type": "string" },
        "phone_number": { "type": "string" },
        "address_id": { "$ref": "#/definitions/Address/properties/address_id" }
      },
      "required": [
        "client_id",
        "client_name",
        "email",
        "phone_number",
        "address_id"
      ]
    },
    "Category": {
      "type": "object",
      "properties": {
        "category_id": { "type": "integer" },
        "category_name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["category_id", "category_name", "description"]
    },
    "Product": {
      "type": "object",
      "properties": {
        "product_id": { "type": "integer" },
        "product_name": { "type": "string" },
        "price": { "type": "integer" },
        "quantity": { "type": "integer" },
        "description": { "type": "string" },
        "stock_status": { "type": "string" },
        "image_url": { "type": "string" },
        "category_id": {
          "$ref": "#/definitions/Category/properties/category_id"
        }
      },
      "required": [
        "product_id",
        "product_name",
        "price",
        "quantity",
        "stock_status"
      ]
    },
    "OrderItem": {
      "type": "object",
      "properties": {
        "orderItem_id": { "type": "integer" },
        "quantity": { "type": "integer" },
        "price": { "type": "integer" },
        "product_id": { "$ref": "#/definitions/Product/properties/product_id" }
      },
      "required": ["orderItem_id", "quantity", "price", "product_id"]
    },
    "Payment": {
      "type": "object",
      "properties": {
        "payment_id": { "type": "integer" },
        "payment_date": { "type": "string" },
        "payment_method": { "type": "string" },
        "payment_status": { "type": "string" },
        "price": { "type": "integer" }
      },
      "required": [
        "payment_id",
        "payment_date",
        "payment_method",
        "payment_status",
        "price"
      ]
    },
    "Shipment": {
      "type": "object",
      "properties": {
        "shipment_id": { "type": "integer" },
        "shipping_date": { "type": "string" },
        "carrier": { "type": "string" },
        "shipment_status": { "type": "string" },
        "tracking_number": { "type": "string" }
      },
      "required": [
        "shipment_id",
        "shipping_date",
        "carrier",
        "shipment_status",
        "tracking_number"
      ]
    },
    "Worker": {
      "type": "object",
      "properties": {
        "worker_id": { "type": "integer" },
        "role": { "type": "string" },
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "phone_number": { "type": "integer" }
      },
      "required": [
        "worker_id",
        "role",
        "first_name",
        "last_name",
        "phone_number"
      ]
    },
    "Order": {
      "type": "object",
      "properties": {
        "order_id": { "type": "integer" },
        "date": { "type": "string" },
        "status": { "type": "string" },
        "discount": { "type": "number" },
        "client_id": { "$ref": "#/definitions/Client/properties/client_id" },
        "orderItems": {
          "type": "array",
          "items": { "$ref": "#/definitions/OrderItem" }
        },
        "worker_id": { "$ref": "#/definitions/Worker/properties/worker_id" },
        "shipment_id": {
          "$ref": "#/definitions/Shipment/properties/shipment_id"
        },
        "payment_id": {
          "$ref": "#/definitions/Payment/properties/payment_id"
        }
      },
      "required": [
        "order_id",
        "date",
        "status",
        "client_id",
        "orderItems",
        "worker_id"
      ]
    }
  }
}
